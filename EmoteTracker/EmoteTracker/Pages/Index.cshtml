@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<search>
    <form class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label for="channel-search-input">Channel:</label>
        </div>
        <div class="col-12">
            <input type="text" asp-for="Username" class="form-control" id="channel-search-input" placeholder="Username">
        </div>
        <div class="col-12">
            <input type="submit" value="Go" class="btn btn-primary" />
        </div>
    </form>
</search>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emotes[0].CanonicalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emotes[0].Id)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emote in Model.Emotes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => emote.CanonicalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => emote.Id)
                </td>
            </tr>
        }
    </tbody>
</table>
